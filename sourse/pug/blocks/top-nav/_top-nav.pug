mixin menu-toggle()
	+b.toggle-menu-mobile--js.d-lg-none
		span
		.col-auto 12312312
mixin mob-mnu()
	+b.menu-mobile--js.d-lg-none
		+b.toggle-menu-mobile--js
			span
		+e.inner
			+e.logo(href='/')
				img(src="../img/CLAGE-Logo-4c-schwarz 1.png" loading="lazy" alt='html')
			+mnu()
				+TopNavLink("tel:+74957418510","+7(495)741-85-10","phoneblock", '../img/phone1.png')
				+TopNavLink("tel:+74952900585","+7(495)290-05-85","phoneblock",'../img/phone1.png')
				+TopNavLink('mailto:info@clage-russia.ru','info@clage-russia.ru',"mailblock",'../img/mail.png')


mixin top-nav()
	+b.top-nav.block-with-lazy
		.container
			+e.row.row.align-items-center
				.col
					+e.logo(href='/')
						img(src="../img/CLAGE-Logo-4c-schwarz 1.png" loading="lazy" alt='html')
				.col-auto.d-none.d-lg-block.leftphone
					+TopNavLink("+7 (495) 741-85-10","+7 (495) 741-85-10","phoneblock", '../img/phone1.png')
				.col-auto.d-none.d-lg-block.rightphone
					+TopNavLink(" +7 (495) 290-05-85","+7 (495) 290-05-85","phoneblock" ,'../img/phone1.png')
				.col.text-end.d-none.d-lg-block
					+TopNavLink('info@clage-russia.ru','info@clage-russia.ru',"mailblock",'../img/mail.png')
				.col-auto.d-lg-none
					+b.toggle-menu-mobile--js
						span
						+mob-mnu
mixin TopNavLink(link,txt,clas,src)
	+b.h-link(href=link, class=clas)
		img(src=src)
		span=txt