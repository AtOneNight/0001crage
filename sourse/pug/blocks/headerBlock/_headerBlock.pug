            .row.section-cards
                .col-3
                    +CardBlock1("../img/Rectangle180.png","Leon Thomas - The Creator Has a Master Plan (Official Audio)",13)
                .col-3
                    +CardBlock1("../img/Rectangle280.png","Leon Thomas - The Creator Has a Master Plan (Official Audio)",42)
                .col-3
                    +CardBlock1("../img/Rectangle380.png","Leon Thomas - The Creator Has a Master Plan (Official Audio)",76)
